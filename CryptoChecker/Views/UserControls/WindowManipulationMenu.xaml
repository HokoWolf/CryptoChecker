<UserControl x:Class="CryptoChecker.Views.UserControls.WindowManipulationMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CryptoChecker.Views.UserControls"
             mc:Ignorable="d" d:DesignHeight="40" d:DesignWidth="1920"
             x:Name="ManipulationMenu" 
             MouseLeftButtonDown="ManipulationMenu_MouseLeftButtonDown">
    <Border Background="Transparent">
        <Grid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Style="{DynamicResource ControlButtonsStyle}" 
        x:Name="btMinimize" Content="_" Click="btMinimize_Click" />
                <Button Style="{DynamicResource ControlButtonsStyle}" 
        x:Name="btMaximize" Content="🗖" Click="btMaximize_Click" />
                <Button Style="{DynamicResource ControlButtonsStyle}" 
        x:Name="btExit" Content="X" Click="btExit_Click" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
