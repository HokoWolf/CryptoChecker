<Window x:Class="CryptoChecker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoChecker.Views"
        xmlns:userControls="clr-namespace:CryptoChecker.Views.UserControls"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        WindowStyle="None" Height="800" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <userControls:WindowManipulationMenu Width="auto" />
        <ListBox Grid.Row="1" ItemsSource="{Binding CoinsList}"></ListBox>
    </Grid>
</Window>
